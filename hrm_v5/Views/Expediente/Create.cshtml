@model hrm_v5.Models.VACACIONES

@{
    ViewBag.Title = "Create";
}

@Styles.Render("~/Content/EstiloExpediente.css")
@Styles.Render("~/Content/Formulario.css")
@Styles.Render("~/Content/EstiloBoton.css")
@Styles.Render("~/Content/EstiloMantenimiento.css")


<div>
    <h4><div id="lettertext">Expediente Laboral.</div></h4>
    <div class="divBuscar">
        @using (Html.BeginForm("Expediente", "Expediente"))
        {
            <div class="form-group">
                <label class="pNombre">Empleado: </label>
                <div class="col-md-10">
                    <input type="text" name="searchString" class="textInput" placeholder="Número de Identificación del Empleado (#########)" />
                </div>
                <button type="submit" id="Buscar" class="myButton">Buscar</button>
            </div>
        }
    </div>
    <br></br>
    <br></br>
    <hr />
    <div>
        <ul class="tab-links">
            <li><a href="@Url.Action("Expediente", "Expediente")"><div>Datos Personales.</div></a></li>
            <li><a href="#tab2" data-toggle="tab"><div id="tab-2">Amonestaciones.</div></a></li>
            <li><a href="#tab3" data-toggle="tab"><div id="tab-3">Ascensos.</div></a></li>
            <li><a href="#tab4" data-toggle="tab"><div id="tab-4">Permisos.</div></a></li>
            <li><a href="#tab5" data-toggle="tab"><div id="tab-5">Suspensiones.</div></a></li>
            <li class="active"><a id="linkVacaciones" href="@Url.Action("Create", "Expediente")"><div>Vacaciones.</div></a></li>
        </ul>

        <h2>Create</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>VACACIONES</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <input id="Text1" type="text" value="@ViewBag.DiasDisponibles"/>
                <div class="form-group">
                    @Html.LabelFor(model => model.ID_EMPLEADO, "ID_EMPLEADO", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("ID_EMPLEADO", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ID_EMPLEADO, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.INICIO, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.INICIO, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.INICIO, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FINAL, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FINAL, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FINAL, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CANT_DIAS, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CANT_DIAS, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CANT_DIAS, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AUTORIZACION, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.AUTORIZACION, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AUTORIZACION, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
