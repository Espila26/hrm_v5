@model IEnumerable<hrm_v5.Models.PERMISOS>

@{
    ViewBag.Title = "IndexPerm";
}

@Styles.Render("~/Content/EstiloExpediente.css")
@Styles.Render("~/Content/Formulario.css")
@Styles.Render("~/Content/EstiloBoton.css")
@Styles.Render("~/Content/EstiloMantenimiento.css")


<div>
    <h4><div id="lettertext">Expediente Laboral.</div></h4>
    <div class="divBuscar">
        @using (Html.BeginForm("Expediente", "Expediente"))
        {
            <div class="form-group">
                <label class="pNombre">Empleado: </label>
                <div class="col-md-10">
                    <input type="text" name="searchString" class="textInput" placeholder="Número de Identificación del Empleado (#########)" />
                </div>
                <button type="submit" id="Buscar" class="myButton">Buscar</button>
            </div>
        }
    </div>
    <br></br>
    <br></br>
    <hr />
    <div>
        <ul class="tab-links">
            <li><a href="@Url.Action("Expediente", "Expediente")"><div>Datos Personales.</div></a></li>
            <li><a href="@Url.Action("ValidateIDEmpAmon", "Expediente")"><div>Amonestaciones.</div></a></li>
            <li><a href="@Url.Action("ValidateIDEmpAsc", "Expediente")"><div>Ascensos.</div></a></li>
            <li><a href="linkPermiso"><div>Permisos.</div></a></li>
            <li><a href="@Url.Action("ValidateIDEmpSup", "Expediente")"><div>Suspensiones.</div></a></li>
            <li><a href="@Url.Action("ValidateIDEmp", "Expediente")"><div>Vacaciones.</div></a></li>
        </ul>

        <div id="TitleDetails">
            <p>Permisos Solicitados</p>
        </div>

        <style type="text/css">
            .webGrid {
                font: normal 12px/150% Arial, Helvetica, sans-serif;
                border-collapse: collapse;
                width: 99%;
                text-align: center;
            }

            .grid-header {
                background-color: #5C5C5C;
                font-weight: bold;
                color: White !important;
            }

            .webgrid-footer {
                display: none;
            }

            .webGrid table {
                background: #fff;
                overflow: auto;
                border: 1px solid #000000;
            }

            .webGrid th a {
                color: White;
                text-decoration: none;
            }

            .webGrid th {
                padding: 5px;
                background: -webkit-gradient( linear, left top, left bottom, color-stop(0.05, #5C5C5C), color-stop(1, #6C6C70) );
                background: -moz-linear-gradient( center top, #5C5C5C 5%, #6C6C70 100% );
                filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#5C5C5C', endColorstr='#6C6C70');
                background-color: #5C5C5C;
                color: #FFFFFF;
                font-size: 13px;
                font-weight: bold;
                border: 1px solid black;
                border-right: 1px solid #A3A3A3;
            }

            .webGrid td {
                border: 1px solid black;
                padding: 5px;
            }

            .webGrid th a:hover {
                text-decoration: underline;
            }

            .to-the-right {
                text-align: center;
            }

            .contenedorGrid {
                width: 100%;
                position: absolute;
                top: 37%;
            }

            #pager a {
                text-decoration: none;
                display: inline-block;
                padding: 2px 8px;
                margin: 1px;
                color: #FFFFFF;
                border: 1px solid #707070;
                -webkit-border-radius: 3px;
                -moz-border-radius: 3px;
                border-radius: 3px;
                background: -webkit-gradient( linear, left top, left bottom, color-stop(0.05, #7F8C94), color-stop(1, #7F8C94) );
                background: -moz-linear-gradient( center top, #7F8C94 5%, #7F8C94 100% );
                filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#7F8C94', endColorstr='#7F8C94');
                background-color: #7F8C94;
            }

                #pager a:hover {
                    text-decoration: none;
                    border-color: #FFFFFE;
                    color: #FFFFFF;
                    background: none;
                    background-color: #424E54;
                }
        </style>
        <div class="contenedorGrid">
            @using (Html.BeginForm("formAction", "Expediente"))
            {
                var grid = new WebGrid(source: Model,
                rowsPerPage: 6, ajaxUpdateCallback: "addCheck");
                @grid.GetHtml(
                 tableStyle: "webGrid",
                 htmlAttributes: new { id = "checkableGrid" },
                 headerStyle: "webgrid-header",
                 footerStyle: "webgrid-footer",
                 rowStyle: "webgridRow",
                 alternatingRowStyle: "alt",
                 columns: grid.Columns(
                 grid.Column(
                 format: @<text>
                        <input type="checkbox" value="@item.ID_PERMISO" name="childChkbox" />
                </text>,
                 header: ""),
                 grid.Column("ID_PERMISO", "Número de Solicitud", canSort: false),
                 grid.Column("ID_EMPLEADO", "Empleado", canSort: false),
                 grid.Column("INICIO", "Fecha de Inicio", canSort: false),
                 grid.Column("FINAL", "Fecha de Ingreso", canSort: false),
                 grid.Column("GOCE_SALARIO", "Tipo de Permiso", canSort: false),
                 grid.Column("CANT_HORAS", "Cantidad de Horas", canSort: false),
                 grid.Column("CANT_DIAS", "Cantidad de Días", canSort: false),
                 grid.Column("AUTORIZACION", "Autorización", canSort: false)
                    ))
                <div id="pager">
                    @grid.Pager()
                </div>
                <br />
                <div>
                    <input type="button" value="Solicitar" onclick="location.href='@Url.Action("CreatePerm", "Expediente")'" class="myButton" />
                </div>
            }
        </div>

        @section Scripts{
            <script>
        $(function () {
            addCheck();
        });
        function addCheck() {
            var $chk = $('<input/>').attr({ type: 'checkbox', name: 'chkAll', id: 'chkAll', title: "Select All" });
            $('th:first').append($chk);
            $('#chkAll').click(function () {
                $(':checkbox').prop('checked', $(this).is(':checked') ? true : false);
            });
            $(':checkbox').not('#chkAll').click(function () {
                testCheck();
            });
        }
        function testCheck() {
            if ($(':checkbox').not('#chkAll').filter(':not(:checked)').length === 0) {
                $('#chkAll').prop('checked', true);
            } else {
                $('#chkAll').prop('checked', false);
            }
        }
            </script>
        }
