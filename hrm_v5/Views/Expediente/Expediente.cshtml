                 grid.Column("E_MAIL", "Correo Electrónico", canSort: false),
                 grid.Column("ESTADO", "Estado (Activo o Inactivo)", canSort: false)
                    ))
                        <div id="pager">
                            @grid.Pager()
                        </div>
