<div class="contenedorGrid">
    @using (Html.BeginForm("formAction", "EMPRESAS"))
    {
        var grid = new WebGrid(source: Model,
        rowsPerPage: 6, ajaxUpdateCallback: "addCheck");
        @grid.GetHtml(
              tableStyle: "webGrid",
              htmlAttributes: new { id = "checkableGrid" },
              headerStyle: "webgrid-header",
              footerStyle: "webgrid-footer",
              rowStyle: "webgridRow",
              alternatingRowStyle: "alt",
              columns: grid.Columns(
              grid.Column(
              format: @<text>
                        <input type="checkbox" value="@item.ID_EMPRESA" name="childChkbox" />
                </text>,
              header: ""),
              grid.Column("NOMBRE", "Nombre de la Empresa"),
              grid.Column("RAZON_SOCIAL", "Razón Social", canSort: false),
              grid.Column("FECHA_FUNDACION", "Fecha de Fundación", canSort: false),
              grid.Column("PAIS_ORIGEN", "País de Origen", canSort: false),
              grid.Column("ESTADO", "Estado (Activo o inactivo)", canSort: false)
                    ))
        <div id="pager">
            @grid.Pager()
        </div>
        <br />
        <div>
            <input type="button" value="Crear nuevo" onclick="location.href='@Url.Action("Create", "EMPRESAS")'" class="myButton" />
            <input type="submit" name="Editar" value="Editar" class="myButton" />
            <input type="submit" name="Detalles" value="Detalles" class="myButton" />
            <input type="submit" name="Habilitar" value="Habilitar" class="myButton" onClick="return Confirmar('Esta Seguro(a) de que desea habilitar la(as) empresas seleccionadas ', 'habilitar');" />
            <input type="submit" name="Inhabilitar" value="Inhabilitar" class="myButton" onClick="return Confirmar('Esta Seguro(a) de que desea inhabilitar la(as) empresas seleccionadas ', 'Inhabilitar');"  />
            <input id="Inhabilitar" type="submit" name="Inhabilitar" value="Inhabilitar" class="btnInvisible"/>
            <input id="habilitar" type="submit" name="habilitar" value="habilitar" class="btnInvisible" />
        </div>
    }
</div>

@section Scripts{
    <script>
        $(function () {
            addCheck();
        });
        function addCheck() {
            var $chk = $('<input/>').attr({ type: 'checkbox', name: 'chkAll', id: 'chkAll', title: "Select All" });
            $('th:first').append($chk);
            $('#chkAll').click(function () {
                $(':checkbox').prop('checked', $(this).is(':checked') ? true : false);
            });
            $(':checkbox').not('#chkAll').click(function () {
                testCheck();
            });
        }
        function testCheck() {
            if ($(':checkbox').not('#chkAll').filter(':not(:checked)').length === 0) {
                $('#chkAll').prop('checked', true);
            } else {
                $('#chkAll').prop('checked', false);
            }
        }
    </script>
}
