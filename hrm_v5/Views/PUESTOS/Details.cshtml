    <br></br>
        <div class="form-group">
            <input type="button" class="myButton" value="Editar" onclick="location.href='@Url.Action("Edit", "PUESTOS", new { id = Model.PTS_ID })'" />
            <input type="button" class="myButton" value="Regresar" onclick="location.href='@Url.Action("Index", "PUESTOS")'" />
        </div>
    </div>

@section Scripts{
    <script>
        var acc = document.getElementsByClassName("accordion");
        var i;

        for (i = 0; i < acc.length; i++) {
            acc[i].onclick = function () {
                this.classList.toggle("active");
                this.nextElementSibling.classList.toggle("show");
            }
        }
    </script>
}