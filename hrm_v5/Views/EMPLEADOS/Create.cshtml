                        </div>
                    </td>


                    <td class="td2">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ESTADO, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("Estado", new SelectList(new List<Object> { {" Seleccione... "}, { "Activo" }, { "Inactivo" } }), new { @class = "form-control" })
                                <br />
                                @Html.ValidationMessageFor(model => model.ESTADO, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </td>

                    <td class="td1">
                        <div class="form-group">
                            @Html.LabelFor(model => model.PUESTO, "PUESTO", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("PUESTO", null, htmlAttributes: new { @class = "form-control" })
                                <br />
                                @Html.ValidationMessageFor(model => model.PUESTO, "", new { @class = "text-danger" })
